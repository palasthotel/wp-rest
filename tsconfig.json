{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__",
    "lib"
  ]
}